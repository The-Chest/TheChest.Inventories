<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup Label="Package">
		<Title>The Chest Inventories</Title>
		<Description>Provides generic collections to inventory management systems.</Description>
		<Authors>The Chest</Authors>
		<RepositoryUrl>https://github.com/The-Chest/TheChest.Inventories</RepositoryUrl>
		<PackageProjectUrl>https://www.nuget.org/packages/TheChest.Inventories/</PackageProjectUrl>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
	</PropertyGroup>

	<PropertyGroup Label="Compiler">
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup Label="Package">
	  <None Include="..\..\readme.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="TheChest.Core" Version="0.7.0" />
	</ItemGroup>

</Project>
